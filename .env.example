TESSERACT_CMD=/usr/bin/tesseract
CONFIDENCE_THRESHOLD=90


# Google OAuth2 (Sign in with Google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google Document AI (OCR engine)
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_LOCATION=us
GOOGLE_PROCESSOR_ID=your-processor-id

OCR_MAX_PARALLEL_PAGES=4
OCR_MAX_CONVERSION_THREADS=4
OCR_ENGINE_MAX_WORKERS=8
OCR_PDF_DPI=600

OCRMYPDF_OVERSAMPLE_DPI=600

BANGLA_AGGRESSIVE_FILTERING=true
ENABLE_EASYOCR_BANGLA=true
LOG_LEVEL=INFO

LOG_FILE=app/logs/logs.txt
# Max upload size â€” set high enough for 1000-page PDFs
MAX_UPLOAD_SIZE_MB=500

ENVIRONMENT=production
DEBUG=false
